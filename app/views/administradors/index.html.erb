<div class="page-header">
  <%= link_to new_administrador_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Administrador
  <% end %>
  <h1>Lista administradors</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Senha</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @administradors) do |administrador| %>
            <td><%= administrador.nome %></td>
            <td><%= administrador.email %></td>
            <td><%= administrador.senha %></td>
            <td><%= link_to 'Mostrar', administrador %></td>
        <td><%= link_to 'Editar', edit_administrador_path(administrador) %></td>
        <td><%= link_to 'Apagar', administrador, method: :delete, data: { confirm: 'Confirma?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
