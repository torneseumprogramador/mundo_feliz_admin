<div class="page-header">
  <%= link_to pedido_pedido_produtos_path(@pedido), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <%= link_to edit_pedido_pedido_produto_path(@pedido, @pedido_produto), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h1>Mostrar item pedido</h1>
</div>

<dl class="dl-horizontal">
  <dt>Pedido:</dt>
  <dd><%= @pedido_produto.pedido.id %></dd>

  <dt>Produto:</dt>
  <dd><%= @pedido_produto.produto.nome %></dd>

  <dt>Valor:</dt>
  <dd><%= @pedido_produto.valor %></dd>

  <dt>Quantidade:</dt>
  <dd><%= @pedido_produto.quantidade %></dd>

</dl>
