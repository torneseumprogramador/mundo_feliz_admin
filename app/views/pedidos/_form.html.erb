<%= form_for(@pedido, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @pedido.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Verifique os erros abaixo:</h4>

      <ul>
      <% @pedido.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :cliente_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :cliente_id, Cliente.all.collect{|c| [c.nome, c.id]}, {}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :valor_total, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :valor_total, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
