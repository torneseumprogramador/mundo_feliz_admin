<div class="page-header">
  <%= link_to pedidos_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <%= link_to edit_pedido_path(@pedido), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h1>Mostrar pedido</h1>
</div>

<dl class="dl-horizontal">
  <dt>Cliente:</dt>
  <dd><%= @pedido.cliente.nome %></dd>

  <dt>Valor total:</dt>
  <dd>R$ <%= @pedido.valor_total %></dd>

  <dd>
    <ul>
      <% @pedido.pedido_produtos.each do |pp| %>
      <li>
        <%= pp.produto.nome %> - Valor Unidade R$ <%= pp.valor %>
      </li>
      <% end %>
    </ul>
  </dd>

</dl>
